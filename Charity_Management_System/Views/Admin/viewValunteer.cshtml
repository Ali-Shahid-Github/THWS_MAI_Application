@using Microsoft.Data.SqlClient;
@using System.Data;

@{
    ViewData["Title"] = "Admin Home View Volunteer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    


    SqlConnection con = new SqlConnection(SQLConnection.connectionString);
    con.Open();

    SqlCommand command = new SqlCommand("SELECT V_Id, V_Name, V_ContactNo,V_Address,V_Age,V_Qualification,V_Gender,V_Email_Id,CONVERT(VARCHAR(11), V_CreationDate,106) " +
        "FROM Volunteer WHERE V_IsApproved=1", con);

    SqlDataAdapter dataAdapter = new SqlDataAdapter(command);
    DataSet dataSet = new DataSet();
    dataAdapter.Fill(dataSet);
    con.Close();
    DataTable table = dataSet.Tables[0];
}


<body>
    <br />
    <main id="main" data-aos="fade-up">

        <!-- ======= Breadcrumbs ======= -->
        <section class="breadcrumbs">
            <div class="container">

                <div class="d-flex justify-content-between align-items-center">
                    <h2>View Volunteer</h2>

                </div>

            </div>
        </section><!-- End Breadcrumbs -->

        <section class="inner-page">
            <section class="container-fluid">
                <div class="table-responsive-md">
                    <div class="container col-6">

                        <input class="form-control" id="myInput" type="text" placeholder="Search!!!"> <br />
                    </div>
                    <table id="table"
                           data-toggle="table"
                           data-search="false"
                           data-url='x' ,
                           data-filter-control="true"
                           data-show-export="true"
                           data-click-to-select="true"
                           data-toolbar="#toolbar"
                           class="table-responsive table-hover">
                        <thead>
                            <tr>
                                <th scope="col" data-field="voulenterID" data-filter-control="input" data-sortable="true">Volunteer ID</th>
                                <th scope="col" data-field="name" data-filter-control="input" data-sortable="true">Name</th>
                                <th scope="col" data-field="age" data-filter-control="select" data-sortable="true">Age</th>
                                <th scope="col" data-field="gender" data-filter-control="select" data-sortable="true">Gender</th>
                                <th scope="col" data-field="education" data-filter-control="select" data-sortable="true">Education</th>
                                <th scope="col" data-field="number" data-filter-control="input" data-sortable="true">Contact Number</th>
                                <th scope="col" data-field="email" data-filter-control="input" data-sortable="true">Email ID</th>
                                <th scope="col" data-field="dateAdeed" data-filter-control="select" data-sortable="true">Date Added</th>
                            </tr>
                        </thead>
                        <tbody id="myTable">
                            @for (var i = 0; i < table.Rows.Count; i++)
                            {
                                <tr>
                                    <td>@table.Rows[i].ItemArray[0]</td>
                                    <td>@table.Rows[i].ItemArray[1]</td>
                                    <td>@table.Rows[i].ItemArray[4]</td>
                                    <td>@table.Rows[i].ItemArray[6]</td>
                                    <td>@table.Rows[i].ItemArray[5]</td>
                                    <td>@table.Rows[i].ItemArray[2]</td>
                                    <td>@table.Rows[i].ItemArray[7]</td>
                                    <td>@table.Rows[i].ItemArray[8]</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </section>

        </section>

    </main><!-- End #main -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.10.0/bootstrap-table.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.9.1/extensions/editable/bootstrap-table-editable.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.9.1/extensions/filter-control/bootstrap-table-filter-control.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.9.1/extensions/export/bootstrap-table-export.js"></script>
    <script src="https://rawgit.com/hhurz/tableExport.jquery.plugin/master/tableExport.js"></script>




    <script>


        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

        });


        //exporte les données sélectionnées
        var $table = $('#table');
        $(function () {
            $('#toolbar').find('select').change(function () {
                $table.bootstrapTable('refreshOptions', {
                    exportDataType: $(this).val()
                });
            });
        })

        var trBoldBlue = $("table");

        $(trBoldBlue).on("click", "tr", function () {
            $(this).toggleClass("bold-blue");
        });
    </script>
</body>
